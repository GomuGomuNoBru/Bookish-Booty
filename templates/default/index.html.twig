{# templates/default/index.html.twig #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="header">
            <div class="logo">
                <h1>Bookish Booty</h1>
            </div>
            <div class="menu">
                <ul>
                    <li><a href="{{ path('login') }}">Login</a></li>
                    <li><a href="{{ path('login') }}">Register</a></li>
                    <li><a href="{{ path('login') }}">Search</a></li>
                </ul>
            </div>
        </div>

        <div class="content">
            <h2>Book's News</h2>
            <div class="book-list rotating-books">
                {% for book in books %}
                    <div class="book">
                        <img src="{{ asset(book.image) }}" alt="{{ book.title }} cover">
                        <div class="book-description">
                            <h3>{{ book.title }}</h3>
                            <p>{{ book.author }}</p>
                            <p class="price">${{ book.price }}</p>
                            <button class="buy-now-btn">Buy Now</button>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- Section for 3 random recommended books -->
            <h2>Recommended Books</h2>
            <div class="book-list">
                {% for book in books %}
                    <div class="book">
                        <img src="{{ asset(book.image) }}" alt="{{ book.title }} cover">
                            <div class="book-description">
                                <h3>{{ book.title }}</h3>
                                <p>{{ book.author }}</p>
                                <p class="price">${{ book.price }}</p>
                                <button class="buy-now-btn">Buy Now</button>
                            </div>
                    </div>
                {% endfor %}
            </div>

            <!-- Section for 3 most popular books -->
            <h2>Most Popular Books</h2>
            <div class="book-list">
                {% for book in books %}
                    <div class="book">
                        <img src="{{ asset(book.image) }}" alt="{{ book.title }} cover">
                            <div class="book-description">
                                <h3>{{ book.title }}</h3>
                                <p>{{ book.author }}</p>
                                <p class="price">${{ book.price }}</p>
                                <button class="buy-now-btn">Buy Now</button>
                            </div>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="footer">
            <div class="contact">
                <h3>Contact Us</h3>
                <p>Email: info@bookishbooty.com</p>
                <p>Phone: 123-456-7890</p>
            </div>
            <div class="links">
                <ul>
                    <li><a href="#">Privacy Policy</a></li>
                    <li><a href="#">Terms of Service</a></li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
