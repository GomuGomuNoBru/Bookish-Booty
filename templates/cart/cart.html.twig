
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <link rel="stylesheet" href="{{ asset('font-awesome-4.7.0/css/font-awesome.min.css')}}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="header">
            <div class="logo">
                <h1><a href="{{ path('home') }}">Bookish Booty</a></h1>
            </div>
            <div class="menu">
                <ul>
                    <li><a href="{{ path('login') }}">Login</a></li>
                    <li><a href="{{ path('login') }}">Register</a></li>
                    <li><a href="{{ path('login') }}">Search</a></li>
                    <li><a href="{{ path('shopping_cart') }}"><i class="fa fa-shopping-cart" aria-hidden="true"></i>
                        </a></li> <!-- Add this line -->
                </ul>
            </div>
        </div>

        <div class="content-cart">
            <h2>Your Shopping Cart</h2>
            <div class="cart-items">
                <!-- Display items in the cart -->
                {% for item in cartItems %}
                    <div class="cart-item">
                        <img src="{{ asset(item.book.image) }}" alt="{{ item.book.name }} cover">
                        <div class="item-details">
                            <h3>{{ item.book.name }}</h3>
                            <p>Price: ${{ item.book.price }}</p>
                            <p>Quantity: {{ item.quantity }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="footer">
            <div class="contact">
                <h3>Contact Us</h3>
                <p>Email: info@bookishbooty.com</p>
                <p>Phone: 123-456-7890</p>
            </div>
            <div class="links">
                <ul>
                    <li><a href="#">Privacy Policy</a></li>
                    <li><a href="#">Terms of Service</a></li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
